<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_sale_commission_vts_view" model="ir.ui.view">
		<field name="name">res.config.settings.sale.commission.vts.view
		</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="40" />
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]/div[@data-key='sale_management']"
				position="inside">
				<h2>Sales Commission Configuration</h2>
                                <div class="row mt16 o_settings_container">
					<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_right_pane">
							<label for="sale_commission_method" />
							<div class="text-muted">
								Sales Commission Apply Based on
							</div>
							<div class="content-group">
								<div class="mt16">
									<field name="sale_commission_method" class="o_light_label"
										widget="radio" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
